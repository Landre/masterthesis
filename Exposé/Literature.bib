file = {:C$\backslash$:/Users/leise/OneDrive/Dokumente/Studium/Masterthesis - movisens/Paper/Problemstellung/Wartezeiten/Jacobi2014{\_}Article{\_}PsychischeSt{\"{o}}rungenInDerAllgem.pdf:pdf},
isbn = {1433-0407},
